<h1 style="text-align:center">Add a new comment to <%=campground.name %> </h1>

<div class="container">
    <div class="row">
        <div style="width:30%; margin:0 auto">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                 <input class="form-control" type="text" name="comment[text]" placeholder="text">  
            </div>
          
            
            <div class="form-group">
                   <button class="btn btn-lg btn-primary btn-block">Submit! </button>
            </div>
             
             
              
           
            
        </form>
        <a href="/campgrounds">Go back</a>
        </div>
       
        
        <!--we use the attribute name to grab the information from the body which will 
        reference this data by the name of the attributes here name & image
        -->  
        
        
     </div>
</div>
